# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_TYPE=local  # local, gcp_postgresql, gcp_mysql

# For Google Cloud PostgreSQL
DB_NAME=boltabacus
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=your-gcp-postgresql-host
DB_PORT=5432

# For Google Cloud MySQL
# DB_NAME=boltabacus
# DB_USER=root
# DB_PASSWORD=your-db-password
# DB_HOST=your-gcp-mysql-host
# DB_PORT=3306

# Redis Configuration (for WebSocket/Channels)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Google Cloud Storage (for production)
USE_GOOGLE_CLOUD_STORAGE=False
GS_BUCKET_NAME=boltabacus-static
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173
